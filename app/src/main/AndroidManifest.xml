<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gunsoft.rivercrossing" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MenuActivity"
            android:label="RiverCrossing"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Level2Activity"
            android:label="Level2Activity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".Level1Activity"
            android:label="Level1Activity"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".Level3Activity"
            android:label="Level3Activity"
            android:screenOrientation="landscape">
        </activity>

        <service android:name="MusicService"  android:enabled="true"></service>
    </application>

</manifest>
